<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="carbon_Theme.Light.NoActionBar">
        <item name="android:statusBarColor">@color/carbon_amber_700</item>
        <item name="android:windowBackground">@color/carbon_amber_100</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/carbon_cyan_a400</item>
    </style>

    <style name="carbon_ImageView.IconButton">
        <item name="carbon_rippleColor">@color/carbon_ripple_dark</item>
        <item name="carbon_rippleStyle">borderless</item>
        <item name="android:scaleType">center</item>
        <item name="android:clickable">true</item>
        <item name="carbon_tint">#000000</item>
    </style>

</resources>
